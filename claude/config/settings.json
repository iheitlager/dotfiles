{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Bash(tmux:*)",
      "Bash(podman:*)",
      "Bash(uv:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(echo:*)",
      "Bash(date:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(cd:*)",
      "mcp__*",
      "Bash(npm *)",
      "Bash(*-h*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(curl|*sh:*)",
      "Bash(wget|*sh:*)",
      "Bash(*>/dev/tcp/*)",
      "Bash(*base64*decode*)",
      "Bash(chmod 777:*)",
      "Bash(sudo:*)",
      "Bash(nc -:*)",
      "Bash(crontab:*)",
      "Bash(*LaunchAgents*)",
      "Bash(*LaunchDaemons*)",
      "Write(~/.ssh/*)",
      "Write(~/.aws/*)",
      "Write(~/.config/secrets)",
      "Write(/etc/*)",
      "Write(~/.crontab)",
      "Read(~/.ssh/*)",
      "Read(~/.aws/*)",
      "Read(~/.config/secrets)"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "swarm-hook register"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Edit|Write|Bash|Grep|Glob|Task",
        "hooks": [
          {
            "type": "command",
            "command": "swarm-hook hook"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/iheitlager/.claude/hooks/rtk-rewrite.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.dotfiles/claude/config/statusline-powerline.sh"
  },
  "teammateMode": "tmux",
  "additionalDirectories": [
    ".",
    "~/.local/state/agent-context",
    "~/.dotfiles",
    "~/wc/**"
  ]
}
