# brew installer helper, normally run this from 'dot'
TMPPATH=$PATH
PATH=/usr/local/bin:$PATH

brew install docker || brew upgrade docker
brew install docker-buildx  || brew upgrade docker-buildx
brew install docker-compose  || brew upgrade docker-compose
brew install docker-completion || brew upgrade docker-completion
brew install colima || brew upgrade colima
brew install podman || brew upgrade podman
brew install ctop || brew upgrade ctop

export PATH=$TMPPATH
