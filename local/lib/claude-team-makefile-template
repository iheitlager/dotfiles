# Claude Team Workspace - {{WORKSPACE_NAME}}
# Generated by claude-team on {{DATE}}
#
# Team Config: {{TEAM_CONFIG}}
# Projects: {{PROJECTS}}

WORKSPACE := $(shell pwd)
USER := $(shell whoami)
TEAM_CONFIG := {{TEAM_CONFIG}}
CONTAINER_IMAGE := claudeteam:latest

# Known projects (auto-detected at init time)
PROJECTS := {{PROJECTS_LIST}}

# Default to first project if only one exists, otherwise require PROJECT=
PROJECT ?= $(if $(filter 1,$(words $(PROJECTS))),$(firstword $(PROJECTS)),)

.PHONY: help workstation run run4 shell build validate clean info worktrees clean-worktrees

help: ## Show this help
	@echo "Claude Team Workspace - {{WORKSPACE_NAME}}"
	@echo ""
	@echo "Team Config:  $(TEAM_CONFIG)"
	@echo "Projects:     {{PROJECTS}}"
	@echo "User:         $(USER)"
	@echo ""
	@echo "Usage: make <target> [PROJECT=name]"
	@echo ""
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | sort | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[36m%-15s\033[0m %s\n", $$1, $$2}'

# ============================================================
# Container Modes
# ============================================================

workstation: ## Start workstation mode (team-config + shell)
	@claude-team -w "$(WORKSPACE)" workstation

run: ## Start 2-agent mode (requires PROJECT=name)
ifndef PROJECT
	$(error PROJECT is required. Usage: make run PROJECT=<project>)
endif
	@claude-team -w "$(WORKSPACE)" -p "$(PROJECT)" agent

run4: ## Start 4-agent mode (requires PROJECT=name)
ifndef PROJECT
	$(error PROJECT is required. Usage: make run4 PROJECT=<project>)
endif
	@claude-team -w "$(WORKSPACE)" -p "$(PROJECT)" -n 4 agent

shell: ## Start shell-only container
	@claude-team -w "$(WORKSPACE)" shell

# ============================================================
# Container Management
# ============================================================

build: ## Build the container image
	@claude-team build

validate: ## Validate workspace structure
	@claude-team -w "$(WORKSPACE)" validate

info: ## Show workspace info
	@echo "Workspace:    $(WORKSPACE)"
	@echo "Team Config:  $(TEAM_CONFIG)"
	@echo "User:         $(USER)"
	@echo "Image:        $(CONTAINER_IMAGE)"
	@echo ""
	@echo "Projects:"
	@for dir in */; do \
		if [ "$$dir" != "$(TEAM_CONFIG)/" ] && [ -d "$$dir/.git" ]; then \
			echo "  - $${dir%/}"; \
		fi \
	done
	@echo ""
	@echo "Worktrees:"
	@if [ -d "worktrees" ]; then \
		find worktrees -mindepth 2 -maxdepth 2 -type d 2>/dev/null | sed 's|^|  - |' || echo "  (none)"; \
	else \
		echo "  (none)"; \
	fi

clean: ## Stop and remove all team containers for this workspace
	@echo "Stopping containers..."
	@podman ps -a --filter "name=claude-.*-$(USER)" --format "{{.Names}}" | xargs -r podman rm -f 2>/dev/null || true
	@echo "Done"

# ============================================================
# Development Helpers
# ============================================================

worktrees: ## List all worktrees
	@echo "Worktrees for $(USER):"
	@for project in */; do \
		if [ "$$project" != "$(TEAM_CONFIG)/" ] && [ -d "$$project/.git" ]; then \
			echo "\n$${project%/}:"; \
			git -C "$$project" worktree list 2>/dev/null | grep -v "^$$" | sed 's|^|  |'; \
		fi \
	done

clean-worktrees: ## Remove merged worktrees (interactive)
	@echo "This will remove merged worktrees. Press Ctrl+C to cancel."
	@read -p "Continue? [y/N] " confirm && [ "$$confirm" = "y" ] || exit 1
	@for project in */; do \
		if [ "$$project" != "$(TEAM_CONFIG)/" ] && [ -d "$$project/.git" ]; then \
			echo "Cleaning $${project%/}..."; \
			git -C "$$project" worktree prune; \
		fi \
	done
