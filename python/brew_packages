#!/usr/bin/env bash

# brew installer helper, normally run this from 'dot'
# check: http://docs.python-guide.org/en/latest/starting/install/osx/
TMPPATH=$PATH
PATH=/usr/local/bin:$PATH

brew install virtualenv || brew upgrade virtualenv
brew install uv || brew upgrade uv
brew install python || brew upgrade python
brew unlink python@3.13 && brew link python@3.13

brew install readline || brew upgrade readline

# minio
brew install minio/stable/mc || brew upgrade minio/stable/mc

#pip install ansible


export PATH=$TMPPATH
