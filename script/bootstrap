#!/usr/bin/env bash
# Copyright 2026 Ilja Heitlager
# SPDX-License-Identifier: Apache-2.0

#
# bootstrap prepares the environment with dotfiles
# taken from https://github.com/holman/dotfiles
#
# XDG Base Directory Specification:
# https://specifications.freedesktop.org/basedir-spec/latest/

starttime=$(date +"%s")

# Flags
FORCE_GIT=false
SKIP_BREW=false

# make sure we get the sudo password at the start
sudo -v

cd "$(dirname "$0")/.."
export DOTFILES=$(pwd)
export XDG_CONFIG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}"
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}"
export XDG_CACHE_HOME="${XDG_CACHE_HOME:-$HOME/.cache}"

export PATH=/usr/local/bin:$PATH

set -e

echo ''

info () {
  printf "  [ \033[00;34m..\033[0m ] $1"
}

user () {
  printf "\r  [ \033[0;33m?\033[0m ] $1 "
}

success () {
  printf "\r\033[2K  [ \033[00;32mOK\033[0m ] $1\n"
}

fail () {
  printf "\r\033[2K  [\033[0;31mFAIL\033[0m] $1\n"
  echo ''
}

# Create XDG Base Directory structure
# See: https://specifications.freedesktop.org/basedir-spec/latest/
setup_xdg_dirs () {
  info 'setting up XDG directories'

  local xdg_dirs=(
    "$HOME/.config"       # XDG_CONFIG_HOME - user configuration files
    "$HOME/.local/share"  # XDG_DATA_HOME   - user data files
    "$HOME/.local/state"  # XDG_STATE_HOME  - user state (logs, history)
    "$HOME/.cache"        # XDG_CACHE_HOME  - non-essential cached data
    "$HOME/.local/bin"    # User executables (not in XDG spec, but common convention)
  )

  for dir in "${xdg_dirs[@]}"; do
    if [ ! -d "$dir" ]; then
      mkdir -p "$dir"
      success "created $dir"
    else
      success "exists $dir"
    fi
  done
  success "setting up XDG directories"
}

# Purge stale symlinks from XDG directories
purge_stale_symlinks () {
  info 'purging stale symlinks'

  if ! command -v dot &> /dev/null; then
    fail "dot command not found, skipping symlink purge"
    return
  fi

  # Run dot purge with --force to avoid interactive prompt
  if "$DOTFILES/local/bin/dot" purge --force > /tmp/dotfiles-purge 2>&1; then
    success "purged stale symlinks"
  else
    fail "error purging symlinks, check /tmp/dotfiles-purge"
    cat /tmp/dotfiles-purge
  fi
}

# Validate no conflicting directory structures
# For example, both config/nvim and nvim/config should not exist
validate_config_structure () {
  info 'validating config directory structure'

  local conflicts=()

  # Check for topic-specific config directories
  for topic_config in $(find "$DOTFILES" -maxdepth 2 -type d -name 'config' ! -path "$DOTFILES/config"); do
    local topic=$(basename $(dirname "$topic_config"))
    local general_config="$DOTFILES/config/$topic"

    if [ -d "$general_config" ]; then
      conflicts+=("$topic")
    fi
  done

  if [ ${#conflicts[@]} -gt 0 ]; then
    echo ""
    fail "Conflicting config directory structures detected!"
    echo ""
    echo "The following topics have BOTH config/<topic> and <topic>/config:"
    echo ""
    for topic in "${conflicts[@]}"; do
      echo "  ❌ config/$topic  (should be removed)"
      echo "  ✅ $topic/config  (has precedence)"
      echo ""
    done
    echo "Resolution: Remove the config/<topic> directories listed above"
    echo "  Example: rm -rf $DOTFILES/config/nvim"
    echo ""
    exit 1
  fi

  success "no conflicting config structures"
}

# git gitconfig generator - creates local config with user info and signing key
setup_gitconfig () {
  local local_gitconfig="$HOME/.local/gitconfig"
  local force=$1

  if [ -f "$local_gitconfig" ] && [ "$force" != "true" ]; then
    success "local gitconfig already exists at $local_gitconfig"
    return
  fi

  info 'setup local gitconfig\n'

  user ' - What is your git author name?'
  read -e git_authorname
  user ' - What is your git author email?'
  read -e git_authoremail

  # Try to get SSH signing key from 1Password agent
  local ssh_key=""
  if ssh-add -L &>/dev/null; then
    local available_keys=$(ssh-add -L)
    local key_count=$(echo "$available_keys" | wc -l | tr -d ' ')
    
    if [ "$key_count" -eq 1 ]; then
      ssh_key="$available_keys"
      info "Found SSH key from agent\n"
    elif [ "$key_count" -gt 1 ]; then
      echo ""
      info "Multiple SSH keys found:\n"
      echo "$available_keys" | nl
      user ' - Enter the number of the key to use for signing:'
      read -e key_num
      ssh_key=$(echo "$available_keys" | sed -n "${key_num}p")
    fi
  fi

  if [ -z "$ssh_key" ]; then
    user ' - Paste your SSH public key for commit signing (or leave empty to skip):'
    read -e ssh_key
  fi

  # Create the local gitconfig
  mkdir -p "$(dirname "$local_gitconfig")"
  cat > "$local_gitconfig" << EOF
# Local git config - machine specific, not committed
[user]
    name = $git_authorname
    email = $git_authoremail
EOF

  if [ -n "$ssh_key" ]; then
    cat >> "$local_gitconfig" << EOF
    signingKey = "$ssh_key"
EOF
  fi

  success "created $local_gitconfig"
}

# Link XDG config directories
link_config_files () {
  local overwrite_all=false backup_all=false skip_all=false

  # Link topic-specific config directories: ~/.dotfiles/<topic>/config/ → ~/.config/<topic>/
  for src in $(find "$DOTFILES" -maxdepth 2 -type d -name 'config' ! -path "$DOTFILES/config")
  do
    local topic=$(basename $(dirname "$src"))
    local dst="$HOME/.config/$topic"
    link_file "$src" "$dst"
  done

  # Link general config subdirectories: ~/.dotfiles/config/<app>/ → ~/.config/<app>/
  if [ -d "$DOTFILES/config" ]; then
    for src in "$DOTFILES/config"/*/
    do
      [ -d "$src" ] || continue
      local app=$(basename "$src")
      local dst="$HOME/.config/$app"
      link_file "$src" "$dst"
    done
  fi

  success 'linking config directories'
}

# create the actual symlink for a dotfile
link_file () {
  local src=$1 dst=$2

  local overwrite= backup= skip=
  local action=

  if [ -f "$dst" -o -d "$dst" -o -L "$dst" ]
  then

    if [ "$overwrite_all" == "false" ] && [ "$backup_all" == "false" ] && [ "$skip_all" == "false" ]
    then

      local currentSrc="$(readlink $dst)"

      if [ "$currentSrc" == "$src" ]
      then

        skip=true;

      else

        user "File already exists: $dst ($(basename "$src")), what do you want to do?\n\
        [s]kip, [S]kip all, [o]verwrite, [O]verwrite all, [b]ackup, [B]ackup all?"
        read -n 1 action

        case "$action" in
          o )
            overwrite=true;;
          O )
            overwrite_all=true;;
          b )
            backup=true;;
          B )
            backup_all=true;;
          s )
            skip=true;;
          S )
            skip_all=true;;
          * )
            ;;
        esac

      fi

    fi

    overwrite=${overwrite:-$overwrite_all}
    backup=${backup:-$backup_all}
    skip=${skip:-$skip_all}

    if [ "$overwrite" == "true" ]
    then
      rm -rf "$dst"
      success "removed $dst"
    fi

    if [ "$backup" == "true" ]
    then
      mv "$dst" "${dst}.backup"
      success "moved $dst to ${dst}.backup"
    fi

    if [ "$skip" == "true" ]
    then
      success "skipped $src"
    fi
  fi

  if [ "$skip" != "true" ]  # "false" or empty
  then
    ln -s "$1" "$2"
    success "linked $1 to $2"
  fi
}

install_dotfiles () {
  info 'installing dotfiles'

  local overwrite_all=false backup_all=false skip_all=false

  for src in $(find "$DOTFILES" -maxdepth 2 -name '*.symlink')
  do
    dst="$HOME/.$(basename "${src%.*}")"
    link_file "$src" "$dst"
  done
}

install_brew_packages () {
# If we're on a Mac, let's install and setup homebrew.
  if [ "$(uname -s)" == "Darwin" ]
  then
    info "installing homebrew dependencies"
    if local/bin/dot --new > /tmp/dotfiles-dot 2>&1 ; then
      success "all homebrew dependencies installed"
    else
      fail "error installing homebrew dependencies, check /tmp/dotfiles-dot"
      tail -n 5 /tmp/dotfiles-dot
      exit 1
    fi
  fi
}

run_installers () {
  info "run installers for topic packages"
  echo -n "" > /tmp/dotfiles-install
  for src in $(find "$DOTFILES" -maxdepth 2 -name 'install.sh')
  do
    if sh -c "${src}" >> /tmp/dotfiles-install 2>&1
    then
      success "executed $src"
    else
      fail "error running installer, check /tmp/dotfiles-install"
      tail -n 5 /tmp/dotfiles-install
      exit 1
    fi
  done
  success "all installers done"
}

# Parse command-line arguments
while [[ $# -gt 0 ]]; do
  case $1 in
    -g|--git)
      FORCE_GIT=true
      shift
      ;;
    --no-brew)
      SKIP_BREW=true
      shift
      ;;
    *)
      echo "Unknown option: $1"
      exit 1
      ;;
  esac
done

setup_xdg_dirs
purge_stale_symlinks
validate_config_structure
setup_gitconfig $FORCE_GIT
if [ "$SKIP_BREW" != "true" ]; then
  install_brew_packages
fi
install_dotfiles
link_config_files
run_installers

endtime=$(($(date +"%s")-$starttime))
success "all done in $endtime seconds"
